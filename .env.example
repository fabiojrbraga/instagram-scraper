# FastAPI Configuration
FASTAPI_ENV=development
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# PostgreSQL Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/instagram_scraper

# Browserless Configuration
BROWSERLESS_HOST=https://your-browserless-instance.com
BROWSERLESS_TOKEN=your-browserless-token
# Optional WebSocket URL for Browserless (CDP)
BROWSERLESS_WS_URL=wss://your-browserless-instance.com

# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL_TEXT=gpt-4o-mini
OPENAI_MODEL_VISION=gpt-4o-mini
OPENAI_TEMPERATURE_TEXT=1
OPENAI_TEMPERATURE_VISION=1

# Instagram Credentials (optional, for future use)
INSTAGRAM_USERNAME=your_username
INSTAGRAM_PASSWORD=your_password

# Application Settings
LOG_LEVEL=INFO
MAX_RETRIES=3
REQUEST_TIMEOUT=30
